# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=coursera

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3000

# ============================================
# AI/LLM Configuration (RAG Chatbot)
# ============================================

# OpenAI (recommended for embeddings + chat)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic Claude (optional alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google Gemini (optional alternative)
GOOGLE_API_KEY=your-google-api-key

# LLM Settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Video Streaming Configuration
# ============================================

# Enable/disable video streaming
VIDEO_STREAMING_ENABLED=true

# FFmpeg paths (leave empty to use system PATH)
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# CDN Configuration (for production)
CDN_BASE_URL=

# Max upload size (in bytes, default 5GB)
MAX_VIDEO_SIZE=5368709120

# ============================================
# Production Settings
# ============================================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,https://yourdomain.com

# Rate limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Cache settings
CACHE_TTL=300000
CACHE_MAX_ITEMS=100

# Logging
LOG_LEVEL=info

# ============================================
# Optional: External Services
# ============================================

# Redis (for production caching)
REDIS_URL=

# AWS S3 (for file storage)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# Cloudflare Stream (alternative video hosting)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
